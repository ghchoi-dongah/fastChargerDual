<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="656dp"
    tools:context=".pages.CreditCardWaitFragment">

    <TextView
        android:id="@+id/textViewCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/creditCardTaggingMessage"
        android:textSize="48sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewCreditCardSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/creditCardTaggingSubMessage"
        android:textSize="29sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreditCard"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtPay"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="34sp"
        android:text="@string/rechargeUnitPrice"
        android:layout_marginTop="40dp"
        android:layout_marginStart="316dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCreditCardSub"
        tools:ignore="SpeakableTextPresentCheck"/>
    <TextView
        android:id="@+id/txtInputAmt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="34sp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@id/txtPay"
        app:layout_constraintBottom_toBottomOf="@+id/txtPay"
        tools:ignore="RtlHardcoded,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:text="@string/payUnitMessage"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="@+id/txtInputAmt"
        app:layout_constraintBottom_toBottomOf="@+id/txtInputAmt"
        app:layout_constraintEnd_toEndOf="@id/textViewLine"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/textViewLine"
        android:layout_width="392dp"
        android:layout_height="3dp"
        android:background="#1D2B59"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPay"
        app:layout_constraintStart_toStartOf="@+id/txtPay"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageViewCreditCardBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_to_reader_background"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="contentDescription" />

    <ImageView
        android:id="@+id/imgCreditCardTagging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:background="@drawable/creditcardtagging"
        app:layout_constraintTop_toTopOf="@id/imageViewCreditCardBackground"
        app:layout_constraintStart_toStartOf="@id/imageViewCreditCardBackground"
        app:layout_constraintEnd_toEndOf="@id/imageViewCreditCardBackground"
        app:layout_constraintBottom_toBottomOf="@id/imageViewCreditCardBackground"
        tools:ignore="contentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>