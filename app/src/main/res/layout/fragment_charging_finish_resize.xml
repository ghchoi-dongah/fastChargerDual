<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="512dp"
    android:layout_height="656dp"
    tools:context=".pages.ChargingFinishResizeFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:id="@+id/frameCharging"
        android:layout_width="430dp"
        android:layout_height="580dp"
        android:background="@drawable/button_custom"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewChargingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:text="충전 완료"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/battery_finish"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="@id/textViewChargingMessage"
                app:layout_constraintEnd_toStartOf="@id/textViewChargingMessage"
                app:layout_constraintBottom_toBottomOf="@id/textViewChargingMessage"
                tools:ignore="contentDescription"/>

            <TextView
                android:id="@+id/txtSoc"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="100%"
                android:textSize="56sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textViewChargingMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="400dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EFF5FB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSoc"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageAmountUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/icon_charge_amount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:id="@+id/textViewPartCancelPayUsedContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gin_grey"
                        android:text="@string/chargeOfAmount"
                        android:textSize="22sp"
                        app:layout_constraintTop_toTopOf="@id/imageAmountUsed"
                        app:layout_constraintStart_toEndOf="@id/imageAmountUsed"
                        app:layout_constraintBottom_toBottomOf="@id/imageAmountUsed"/>

                    <TextView
                        android:id="@+id/txtAmountOfCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:text="70kWh"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="@id/textViewPartCancelPayUsedContent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/textViewPartCancelPayUsedContent"/>

                    <ImageView
                        android:id="@+id/imageMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon_charge_money"
                        app:layout_constraintStart_toStartOf="@id/imageAmountUsed"
                        app:layout_constraintTop_toBottomOf="@id/imageAmountUsed"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:id="@+id/textViewMoneyContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/chargeAmount"
                        android:textColor="@color/gin_grey"
                        android:textSize="22sp"
                        app:layout_constraintTop_toTopOf="@id/imageMoney"
                        app:layout_constraintStart_toEndOf="@id/imageMoney"
                        app:layout_constraintBottom_toBottomOf="@id/imageMoney" />

                    <TextView
                        android:id="@+id/txtChargePay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:text="20,000원"
                        android:textSize="28sp"
                        app:layout_constraintBottom_toBottomOf="@id/textViewMoneyContent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/textViewMoneyContent"
                        app:layout_constraintVertical_bias="0.666" />

                    <ImageView
                        android:id="@+id/imageTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon_time"
                        app:layout_constraintStart_toStartOf="@id/imageMoney"
                        app:layout_constraintTop_toBottomOf="@id/imageMoney"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:id="@+id/textViewTimeContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gin_grey"
                        android:text="@string/chargingTime"
                        android:textSize="22sp"
                        app:layout_constraintTop_toTopOf="@id/imageTime"
                        app:layout_constraintStart_toEndOf="@id/imageTime"
                        app:layout_constraintBottom_toBottomOf="@id/imageTime" />

                    <TextView
                        android:id="@+id/txtChargeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:text="00:22:12"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="@id/imageTime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/imageTime" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewPrePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/rechargeUnitPrice"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintStart_toStartOf="@id/cardView" />

            <TextView
                android:id="@+id/textViewInputPrePayment"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:text="0원"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toTopOf="@id/textViewPrePayment"
                app:layout_constraintEnd_toEndOf="@id/cardView"
                app:layout_constraintBottom_toBottomOf="@id/textViewPrePayment"/>

            <TextView
                android:id="@+id/textViewPartCancelPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/PartCancelPay"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toBottomOf="@id/textViewPrePayment"
                app:layout_constraintStart_toStartOf="@id/textViewPrePayment" />

            <TextView
                android:id="@+id/textViewInputCancelPayment"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0원"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toTopOf="@id/textViewPartCancelPay"
                app:layout_constraintEnd_toEndOf="@id/textViewInputPrePayment"
                app:layout_constraintBottom_toBottomOf="@id/textViewPartCancelPay"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStopConfirm"
                android:layout_width="330dp"
                android:layout_height="84dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_blue_button"
                android:backgroundTint="@null"
                android:foreground="@null"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="@string/btnConfirm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout >