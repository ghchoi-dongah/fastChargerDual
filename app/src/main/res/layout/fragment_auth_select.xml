<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="652dp"
    tools:context=".pages.AuthSelectFragment">

    <TextView
        android:id="@+id/textViewAuthSelectMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/authSelectMessage"
        android:textSize="44sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- member info -->
    <View
        android:id="@+id/viewMember"
        android:layout_width="328dp"
        android:layout_height="460dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/layer_list_rect_corner"
        app:layout_constraintTop_toBottomOf="@id/textViewAuthSelectMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/memberMessage"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/viewMember"
        app:layout_constraintStart_toStartOf="@id/viewMember"
        app:layout_constraintEnd_toEndOf="@id/viewMember" />

    <ImageView
        android:id="@+id/imageViewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/member"
        app:layout_constraintTop_toBottomOf="@id/textViewMember"
        app:layout_constraintStart_toStartOf="@id/viewMember"
        app:layout_constraintEnd_toEndOf="@id/viewMember"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/textViewMemberContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:text="@string/memberInfoMessage"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/viewMember"
        app:layout_constraintEnd_toEndOf="@id/viewMember"
        app:layout_constraintTop_toBottomOf="@id/imageViewMember" />

    <TextView
        android:id="@+id/textViewMemberUnitInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="충전단가: 310원"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/imageViewMember"
        app:layout_constraintTop_toBottomOf="@id/imageViewMember"
        app:layout_constraintEnd_toEndOf="@id/imageViewMember" />

    <!-- nomember info -->
    <View
        android:id="@+id/viewNoMember"
        android:layout_width="328dp"
        android:layout_height="460dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/layer_list_rect_corner"
        app:layout_constraintTop_toTopOf="@id/viewMember"
        app:layout_constraintStart_toEndOf="@id/viewMember"
        app:layout_constraintEnd_toStartOf="@id/viewQr"/>

    <TextView
        android:id="@+id/textViewNoMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/nomemberMessage"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/viewNoMember"
        app:layout_constraintStart_toStartOf="@id/viewNoMember"
        app:layout_constraintEnd_toEndOf="@id/viewNoMember" />

    <ImageView
        android:id="@+id/imageViewNoMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/nomember"
        app:layout_constraintTop_toBottomOf="@id/textViewNoMember"
        app:layout_constraintStart_toStartOf="@id/viewNoMember"
        app:layout_constraintEnd_toEndOf="@id/viewNoMember"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/textViewNoMemberContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:text="@string/nomemberInfoMessage"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/viewNoMember"
        app:layout_constraintEnd_toEndOf="@id/viewNoMember"
        app:layout_constraintTop_toBottomOf="@id/imageViewNoMember" />

    <TextView
        android:id="@+id/textViewNoMemberUnitInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="충전단가: 480원"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/imageViewNoMember"
        app:layout_constraintTop_toBottomOf="@id/imageViewNoMember"
        app:layout_constraintEnd_toEndOf="@id/imageViewNoMember" />

    <!-- qr -->
    <View
        android:id="@+id/viewQr"
        android:layout_width="328dp"
        android:layout_height="460dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/layer_list_rect_corner"
        app:layout_constraintTop_toBottomOf="@id/textViewAuthSelectMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/qrMessage"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/viewQr"
        app:layout_constraintStart_toStartOf="@id/viewQr"
        app:layout_constraintEnd_toEndOf="@id/viewQr" />

    <ImageView
        android:id="@+id/imageViewQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/qr"
        app:layout_constraintTop_toBottomOf="@id/textViewQr"
        app:layout_constraintStart_toStartOf="@id/viewQr"
        app:layout_constraintEnd_toEndOf="@id/viewQr"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/textViewQrContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="@string/qrInfoMessage"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/viewQr"
        app:layout_constraintEnd_toEndOf="@id/viewQr"
        app:layout_constraintTop_toBottomOf="@id/imageViewQr" />

</androidx.constraintlayout.widget.ConstraintLayout>