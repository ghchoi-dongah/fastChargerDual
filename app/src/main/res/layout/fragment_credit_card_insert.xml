<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="480dp"
    android:layout_height="676dp"
    tools:context=".pages.InitFragment">

    <View
        android:id="@+id/viewLine"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#2de6d6"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/bg_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_check"
            android:clickable="false"
            android:visibility="invisible" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/creditwaitMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/creditwaitMessage"
        android:textSize="25dp"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preAmtMessage"
        android:textSize="18dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/creditwaitMessage"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtInputAmt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="40sp"
        android:text="0"
        android:gravity="right|center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="@id/creditwaitMessage"
        app:layout_constraintTop_toBottomOf="@id/creditwaitMessage" />

    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payUnitMessage"
        android:textSize="24sp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/txtInputAmt"
        app:layout_constraintTop_toTopOf="@id/txtInputAmt" />

    <View
        android:layout_width="260dp"
        android:layout_height="1.5dp"
        android:layout_centerInParent="true"
        android:background="#224E98"
        app:layout_constraintRight_toRightOf="@id/won"
        app:layout_constraintTop_toBottomOf="@id/txtInputAmt" />

    <ImageView
        android:id="@+id/creditInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/credit_card_insert01"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="@id/won"
        app:layout_constraintTop_toBottomOf="@id/txtInputAmt" />


</androidx.constraintlayout.widget.ConstraintLayout>
