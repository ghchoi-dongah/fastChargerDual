<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="652dp"
    tools:context=".pages.ChargingFragment">

    <View
        android:id="@+id/view"
        android:layout_width="730dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/layer_list_rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtChargingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/chargingMessage"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLimitSoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="최대 충전량: "
        android:textSize="26sp"
        android:textColor="@color/black_500"
        app:layout_constraintTop_toBottomOf="@id/txtChargingMessage"
        app:layout_constraintStart_toStartOf="@id/txtChargingMessage"
        app:layout_constraintEnd_toEndOf="@id/txtChargingMessage" />

    <!-- 1. 배경용 -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBackground"
        android:layout_width="265dp"
        android:layout_height="265dp"
        app:indicatorSize="265dp"
        app:trackThickness="20dp"
        app:indicatorColor="#EEEEEE"
        android:progress="100"
        app:layout_constraintTop_toTopOf="@id/progressCircular"
        app:layout_constraintBottom_toBottomOf="@id/progressCircular"
        app:layout_constraintStart_toStartOf="@id/progressCircular"
        app:layout_constraintEnd_toEndOf="@id/progressCircular" />

    <!-- 2. 실제 게이지 -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressCircular"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="60dp"
        android:progress="60"
        app:indicatorSize="280dp"
        app:trackThickness="34dp"
        app:indicatorColor="@color/primary"
        app:trackCornerRadius="6dp"
        app:trackColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/txtChargingMessage"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view" />

    <TextView
        android:id="@+id/txtSoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="100%"
        android:textSize="60sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/progressCircular"
        app:layout_constraintStart_toStartOf="@id/progressCircular"
        app:layout_constraintEnd_toEndOf="@id/progressCircular" />

    <TextView
        android:id="@+id/textViewAmountUsedContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:text="@string/charge_of_amount"
        android:textSize="22sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/progressCircular"
        app:layout_constraintBottom_toBottomOf="@id/progressCircular"
        app:layout_constraintEnd_toEndOf="@id/progressCircular"/>

    <TextView
        android:id="@+id/txtAmountOfCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="0kWh"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewAmountUsedContent"
        app:layout_constraintStart_toStartOf="@id/textViewAmountUsedContent"
        app:layout_constraintEnd_toEndOf="@id/textViewAmountUsedContent" />

    <View
        android:id="@+id/viewLine1"
        android:layout_width="3.5dp"
        android:layout_height="80dp"
        android:layout_marginStart="243dp"
        android:layout_marginBottom="50dp"
        android:background="#E7E7E7"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view" />

    <View
        android:id="@+id/viewLine2"
        android:layout_width="3.5dp"
        android:layout_height="80dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="50dp"
        android:background="#E7E7E7"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/textViewMoneyContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gin_grey"
        android:layout_marginStart="50dp"
        android:text="@string/charge_amount"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/viewLine1"
        app:layout_constraintStart_toStartOf="@id/view"/>

    <TextView
        android:id="@+id/txtChargePay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20,000원"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewMoneyContent"
        app:layout_constraintStart_toStartOf="@id/textViewMoneyContent" />

    <TextView
        android:id="@+id/textViewTimeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:textColor="@color/gin_grey"
        android:text="@string/charging_time"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/viewLine1"
        app:layout_constraintStart_toEndOf="@id/viewLine1"/>

    <TextView
        android:id="@+id/txtChargeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:22:12"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewTimeContent"
        app:layout_constraintStart_toStartOf="@id/textViewTimeContent" />

    <TextView
        android:id="@+id/textViewLeftTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/remainTime"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/viewLine2"
        app:layout_constraintStart_toEndOf="@id/viewLine2"/>

    <TextView
        android:id="@+id/txtRemainTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewLeftTime"
        app:layout_constraintStart_toStartOf="@id/textViewLeftTime"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_card_bg"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etcInfo"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewLine3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#E7E7E7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewInfo" />

            <TextView
                android:id="@+id/textViewVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/outVoltage"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewLine3" />

            <TextView
                android:id="@+id/textViewInputVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0V"
                android:textColor="@color/black_500"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/textViewVoltage"
                app:layout_constraintEnd_toEndOf="@id/viewLine3"
                app:layout_constraintTop_toTopOf="@id/textViewVoltage" />

            <TextView
                android:id="@+id/textViewPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/outPower"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/textViewVoltage"
                app:layout_constraintTop_toBottomOf="@id/textViewVoltage" />

            <TextView
                android:id="@+id/textViewInputPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0kW"
                android:textColor="@color/black_500"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/textViewPower"
                app:layout_constraintEnd_toEndOf="@id/textViewInputVoltage"
                app:layout_constraintTop_toTopOf="@id/textViewPower" />

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/outCurrent"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/textViewVoltage"
                app:layout_constraintTop_toBottomOf="@id/textViewPower" />

            <TextView
                android:id="@+id/textViewInputAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0A"
                android:textColor="@color/black_500"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/textViewAmount"
                app:layout_constraintEnd_toEndOf="@id/textViewInputPower"
                app:layout_constraintTop_toTopOf="@id/textViewAmount" />

            <TextView
                android:id="@+id/textViewRequestCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/requestCurrent"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/textViewAmount"
                app:layout_constraintTop_toBottomOf="@id/textViewAmount" />

            <TextView
                android:id="@+id/textViewRequestCurrentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0A"
                android:textColor="@color/black_500"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/textViewRequestCurrent"
                app:layout_constraintEnd_toEndOf="@id/textViewInputAmount"
                app:layout_constraintTop_toTopOf="@id/textViewRequestCurrent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_card_bg"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textViewUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chargingUnit"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewInputUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black_500"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_card_bg"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textViewPrePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recharge_unit_price"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewInputPrePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black_500"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/view"/>

</androidx.constraintlayout.widget.ConstraintLayout>