<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="656dp"
    tools:context=".pages.ChargingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtChargingMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chargingMessage"
        android:textSize="48sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSoc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:gravity="center_horizontal"
        android:text="100%"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtChargingMessage"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imgRemaintime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_left_time"
        app:layout_constraintStart_toEndOf="@id/txtSoc"
        app:layout_constraintTop_toBottomOf="@id/txtChargingMessage"
        tools:ignore="contentDescription" />


    <TextView
        android:id="@+id/txtRemainTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="@string/remainTimeTitle"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="@id/imgRemaintime"
        app:layout_constraintStart_toEndOf="@id/imgRemaintime"/>

    <TextView
        android:id="@+id/txtRemainTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="end"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/txtRemainTimeTitle"
        app:layout_constraintStart_toEndOf="@id/txtRemainTimeTitle"
        app:layout_constraintBottom_toBottomOf="@id/txtRemainTimeTitle"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="800dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#EFF5FB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSoc"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgChargingAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/electric_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtChargingAmtTitle"
                app:layout_constraintBottom_toBottomOf="@id/txtChargingAmtTitle"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtChargingAmtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/gin_grey"
                android:text="@string/chargeOfAmount"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgChargingAmt" />

            <TextView
                android:id="@+id/txtAmountOfCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center|right"
                android:text="10.00 kWh"
                android:textSize="38sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="@id/imgChargingAmt"
                app:layout_constraintTop_toBottomOf="@id/imgChargingAmt" />


            <ImageView
                android:id="@+id/imgAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:src="@drawable/electirc_money"
                app:layout_constraintStart_toEndOf="@id/imgChargingAmt"
                app:layout_constraintTop_toTopOf="@id/imgChargingAmt"
                app:layout_constraintBottom_toBottomOf="@id/imgChargingAmt"
                />

            <TextView
                android:id="@+id/txtAmtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/gin_grey"
                android:gravity="center_vertical"
                android:text="@string/chargeAmount"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/txtChargingAmtTitle"
                app:layout_constraintStart_toEndOf="@id/imgAmt"
                app:layout_constraintTop_toTopOf="@id/txtChargingAmtTitle"/>

            <TextView
                android:id="@+id/txtChargePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:text="20,000원"
                android:textSize="38sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/txtAmtTitle"
                app:layout_constraintTop_toBottomOf="@id/txtAmtTitle"
                tools:ignore="RtlHardcoded" />


            <ImageView
                android:id="@+id/imgChargingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:src="@drawable/time"
                app:layout_constraintStart_toEndOf="@id/imgAmt"
                app:layout_constraintTop_toTopOf="@id/imgChargingAmt"
                app:layout_constraintBottom_toBottomOf="@id/imgChargingAmt"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/gin_grey"
                android:text="@string/chargingTime"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="@id/txtAmtTitle"
                app:layout_constraintBottom_toBottomOf="@id/txtAmtTitle"
                app:layout_constraintStart_toEndOf="@id/imgChargingTime"/>

            <TextView
                android:id="@+id/txtChargeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="start"
                android:text="00:00:00"
                android:textSize="38sp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/txtTimeTitle"
                app:layout_constraintStart_toStartOf="@id/txtTimeTitle"  />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewVoltage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/outVoltage"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="@id/cardView" />

    <TextView
        android:id="@+id/textViewInputVoltage"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0V"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toTopOf="@id/textViewVoltage"
        app:layout_constraintStart_toEndOf="@id/textViewVoltage"
        app:layout_constraintBottom_toBottomOf="@id/textViewVoltage"/>

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/outCurrent"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toBottomOf="@id/textViewVoltage"
        app:layout_constraintStart_toStartOf="@id/textViewVoltage" />

    <TextView
        android:id="@+id/textViewInputAmount"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0A"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toTopOf="@id/textViewAmount"
        app:layout_constraintStart_toEndOf="@id/textViewAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewAmount"/>

    <TextView
        android:id="@+id/textViewPower"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/outPower"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toBottomOf="@id/textViewAmount"
        app:layout_constraintStart_toStartOf="@id/textViewAmount"/>

    <TextView
        android:id="@+id/textViewInputPower"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0kW"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toTopOf="@id/textViewPower"
        app:layout_constraintStart_toEndOf="@id/textViewPower"
        app:layout_constraintBottom_toBottomOf="@id/textViewPower"/>

    <TextView
        android:id="@+id/textViewUnit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/chargingUnit"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toTopOf="@id/textViewInputUnit"
        app:layout_constraintEnd_toStartOf="@id/textViewInputUnit"/>

    <TextView
        android:id="@+id/textViewInputUnit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:text="0원"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"/>

    <TextView
        android:id="@+id/textViewPrePayment"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/rechargeUnitPrice"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toTopOf="@id/textViewInputPrePayment"
        app:layout_constraintEnd_toStartOf="@id/textViewInputPrePayment"/>

    <TextView
        android:id="@+id/textViewInputPrePayment"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0원"
        android:textSize="22sp"
        android:textColor="@color/gin_grey"
        app:layout_constraintTop_toTopOf="@id/textViewInputAmount"
        app:layout_constraintBottom_toBottomOf="@id/textViewInputAmount"
        app:layout_constraintEnd_toEndOf="@id/textViewInputUnit"/>

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="@id/textViewScreenChangeMessage"
        app:layout_constraintBottom_toBottomOf="@id/textViewScreenChangeMessage"
        app:layout_constraintEnd_toStartOf="@id/textViewScreenChangeMessage"/>

    <TextView
        android:id="@+id/textViewScreenChangeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/screenChangeMessage"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewInputPower"/>



</androidx.constraintlayout.widget.ConstraintLayout>