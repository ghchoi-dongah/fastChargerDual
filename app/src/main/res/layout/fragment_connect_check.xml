<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="480dp"
    android:layout_height="676dp"
    tools:context=".pages.InitFragment">

    <View
        android:id="@+id/viewLine"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#2de6d6"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/bg_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_check"
            android:clickable="false"
            android:visibility="invisible" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plugWaite"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="95dp"
        android:layout_marginTop="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPlugBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_1"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imgPlugConnector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/step12"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>