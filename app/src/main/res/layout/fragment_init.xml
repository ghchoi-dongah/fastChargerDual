<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="480dp"
    android:layout_height="676dp"
    tools:context=".pages.InitFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bgCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_check"
            android:clickable="false"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <ImageView
        android:id="@+id/btnQr"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btnInit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/init_charge"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toTopOf="@id/txtInitMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgComboGlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/init_charge_blur"
        app:layout_constraintTop_toTopOf="@id/btnInit"
        app:layout_constraintLeft_toLeftOf="@id/btnInit"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtInitMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:gravity="center"
        android:text="@string/initMessage"
        android:textStyle="bold"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>