<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="512dp"
    android:layout_height="656dp"
    tools:context=".pages.ChargingResizeFragment">

    <FrameLayout
        android:id="@+id/leftConnector"
        android:layout_width="430dp"
        android:layout_height="580dp"
        android:background="@drawable/button_custom"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewChargingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:text="충전 중"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/battery_charging"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="@id/textViewChargingMessage"
                app:layout_constraintEnd_toStartOf="@id/textViewChargingMessage"
                app:layout_constraintBottom_toBottomOf="@id/textViewChargingMessage"
                tools:ignore="contentDescription"/>

            <TextView
                android:id="@+id/txtSoc"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_horizontal"
                android:text="100%"
                android:textSize="56sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textViewChargingMessage"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/imageLeftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_left_time"
                app:layout_constraintTop_toTopOf="@id/txtSoc"
                app:layout_constraintStart_toEndOf="@id/txtSoc"
                tools:ignore="contentDescription" />

            <TextView
                android:id="@+id/textViewLeftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="@string/remainTime"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="@id/imageLeftTime"
                app:layout_constraintStart_toEndOf="@id/imageLeftTime"
                app:layout_constraintBottom_toBottomOf="@id/imageLeftTime"/>

            <TextView
                android:id="@+id/txtRemainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="00:00:00"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@id/textViewLeftTime"
                app:layout_constraintStart_toStartOf="@id/textViewLeftTime"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="400dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EFF5FB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSoc"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageAmountUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/icon_charge_amount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:id="@+id/textViewAmountUsedContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/gin_grey"
                        android:text="@string/chargeOfAmount"
                        android:textSize="22sp"
                        app:layout_constraintTop_toTopOf="@id/imageAmountUsed"
                        app:layout_constraintStart_toEndOf="@id/imageAmountUsed"
                        app:layout_constraintBottom_toBottomOf="@id/imageAmountUsed"/>

                    <TextView
                        android:id="@+id/txtAmountOfCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:text="0kWh"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="@id/textViewAmountUsedContent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/textViewAmountUsedContent"/>

                    <ImageView
                        android:id="@+id/imageMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon_charge_money"
                        app:layout_constraintStart_toStartOf="@id/imageAmountUsed"
                        app:layout_constraintTop_toBottomOf="@id/imageAmountUsed"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:id="@+id/textViewMoneyContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/chargeAmount"
                        android:textColor="@color/gin_grey"
                        android:textSize="22sp"
                        app:layout_constraintTop_toTopOf="@id/imageMoney"
                        app:layout_constraintStart_toEndOf="@id/imageMoney"
                        app:layout_constraintBottom_toBottomOf="@id/imageMoney" />

                    <TextView
                        android:id="@+id/txtChargePay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:text="50,000원"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="@id/textViewMoneyContent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/textViewMoneyContent" />

                    <ImageView
                        android:id="@+id/imageTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/icon_time"
                        app:layout_constraintStart_toStartOf="@id/imageMoney"
                        app:layout_constraintTop_toBottomOf="@id/imageMoney"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:id="@+id/textViewTimeContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/gin_grey"
                        android:text="@string/chargingTime"
                        android:textSize="22sp"
                        app:layout_constraintTop_toTopOf="@id/imageTime"
                        app:layout_constraintStart_toEndOf="@id/imageTime"
                        app:layout_constraintBottom_toBottomOf="@id/imageTime" />

                    <TextView
                        android:id="@+id/txtChargeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:text="00:22:12"
                        android:textSize="28sp"
                        app:layout_constraintTop_toTopOf="@id/imageTime"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/imageTime" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/outVoltage"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintStart_toStartOf="@id/cardView" />

            <TextView
                android:id="@+id/textViewInputVoltage"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:text="999.9 V"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toTopOf="@id/textViewVoltage"
                app:layout_constraintEnd_toEndOf="@id/txtSoc"
                app:layout_constraintBottom_toBottomOf="@id/textViewVoltage"/>

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/outCurrent"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toBottomOf="@id/textViewVoltage"
                app:layout_constraintStart_toStartOf="@id/textViewVoltage" />

            <TextView
                android:id="@+id/textViewInputAmount"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0A"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toTopOf="@id/textViewAmount"
                app:layout_constraintEnd_toEndOf="@id/textViewInputVoltage"
                app:layout_constraintBottom_toBottomOf="@id/textViewAmount"/>

            <TextView
                android:id="@+id/textViewPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/outPower"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toBottomOf="@id/textViewAmount"
                app:layout_constraintStart_toStartOf="@id/textViewAmount"/>

            <TextView
                android:id="@+id/textViewInputPower"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0kW"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toTopOf="@id/textViewPower"
                app:layout_constraintEnd_toEndOf="@id/textViewInputAmount"
                app:layout_constraintBottom_toBottomOf="@id/textViewPower"/>

            <TextView
                android:id="@+id/textViewUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chargingUnit"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toTopOf="@id/textViewVoltage"
                app:layout_constraintStart_toStartOf="@id/imageLeftTime"/>

            <TextView
                android:id="@+id/textViewInputUnit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0원"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/textViewUnit"
                app:layout_constraintEnd_toEndOf="@id/cardView"
                app:layout_constraintBottom_toBottomOf="@id/textViewUnit"/>

            <TextView
                android:id="@+id/textViewPrePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/rechargeUnitPrice"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toBottomOf="@id/textViewUnit"
                app:layout_constraintStart_toStartOf="@id/textViewUnit"/>

            <TextView
                android:id="@+id/textViewInputPrePayment"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0원"
                android:textSize="16sp"
                android:textColor="@color/gin_grey"
                app:layout_constraintTop_toTopOf="@id/textViewPrePayment"
                app:layout_constraintEnd_toEndOf="@id/textViewInputUnit"
                app:layout_constraintBottom_toBottomOf="@id/textViewPrePayment"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChargingStop"
                android:layout_width="330dp"
                android:layout_height="84dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/rounded_white_button"
                android:backgroundTint="@null"
                android:foreground="@null"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text="@string/chargingStopMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>