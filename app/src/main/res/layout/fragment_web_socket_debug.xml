<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:orientation="horizontal"
    tools:context=".pages.WebSocketDebugFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/btn_web_clear"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="650dp"
        android:text="@string/btnKLogDel"
        android:textColor="@color/black"
        android:background="@drawable/selector_default_btn"
        app:backgroundTint="@null"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_web_close"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:text="@string/btnConfigExit"
        android:textColor="@color/black"
        android:background="@drawable/selector_default_btn"
        app:backgroundTint="@null"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn_web_clear"
        app:layout_constraintTop_toTopOf="@id/btn_web_clear" />

    <TextView
        android:id="@+id/txt_Debug_Message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:scrollbars="vertical"
        android:textColor="#000f00"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>