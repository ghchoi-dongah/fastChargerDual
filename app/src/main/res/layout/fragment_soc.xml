<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="656dp"
    tools:context=".pages.SocFragment"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/textViewSocMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/socMessage"
        android:textSize="48sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtSocInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="320dp"
        android:gravity="end|center"
        android:text="80%"
        android:textSize="86sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSocMessage"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textViewSocGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/socGuideMessage"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@id/txtSocInput"
        app:layout_constraintBottom_toBottomOf="@id/txtSocInput"
        app:layout_constraintTop_toTopOf="@id/txtSocInput"/>

    <ImageButton
        android:id="@+id/imgMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:background="@android:color/transparent"
        android:src="@drawable/circle_minus"
        android:layout_marginVertical="30dp"
        app:layout_constraintLeft_toLeftOf="@id/seekBar"
        app:layout_constraintBottom_toTopOf="@id/seekBar"
        tools:ignore="SpeakableTextPresentCheck, contentDescription" />

    <ImageButton
        android:id="@+id/imgPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:background="@android:color/transparent"
        android:src="@drawable/circle_plus"
        android:layout_marginVertical="30dp"
        app:layout_constraintRight_toRightOf="@id/seekBar"
        app:layout_constraintBottom_toTopOf="@id/seekBar"
        tools:ignore="SpeakableTextPresentCheck, contentDescription" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="820dp"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="50dp"
        android:minHeight="0dp"
        android:maxHeight="50dp"
        android:max="5"
        android:progress="3"
        android:progressDrawable="@drawable/seekbar_style"
        android:splitTrack="false"
        android:thumb="@drawable/seekbar_custom_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSocInput"
        tools:ignore="RtlSymmetry" />

    <TextView
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="50%"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="@id/seekBar" />

    <TextView
        android:id="@+id/txtSocMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80%"
        android:textSize="20sp"
        android:layout_marginStart="470dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/seekBar"
        app:layout_constraintTop_toBottomOf="@id/seekBar"/>


    <TextView
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="100%"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="@id/seekBar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_blue_button"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="@string/btnConfirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>