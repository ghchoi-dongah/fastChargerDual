<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="652dp"
    android:orientation="horizontal"
    tools:context=".pages.AdminPasswordFragment">

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:importantForAutofill="no"
        android:background="@null"
        android:textSize="54sp"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,TextViewEdits" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="500dp"
        android:layout_height="6dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:background="@color/primary"
        app:layout_constraintStart_toStartOf="@id/editPassword"
        app:layout_constraintEnd_toEndOf="@id/editPassword"
        app:layout_constraintTop_toBottomOf="@id/editPassword" />

    <ImageView
        android:id="@+id/imgAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/admin"
        app:layout_constraintEnd_toStartOf="@id/txtAdminTitle"
        app:layout_constraintTop_toTopOf="@id/txtAdminTitle"
        app:layout_constraintBottom_toBottomOf="@id/txtAdminTitle"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:text="@string/adminTitle"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="60dp"
        android:text="@string/btn_Cancel"
        android:textSize="38sp"
        android:textColor="@color/primary"
        android:background="@drawable/selector_default_btn"
        app:backgroundTint="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAdmin" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:text="@string/btn_confirm"
        android:textSize="38sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_blue"
        app:backgroundTint="@null"
        app:layout_constraintLeft_toRightOf="@id/btnCancel"
        app:layout_constraintTop_toTopOf="@id/btnCancel" />

</androidx.constraintlayout.widget.ConstraintLayout>