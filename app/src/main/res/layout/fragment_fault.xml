<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="480dp"
    android:layout_height="676dp"
    tools:context=".pages.FaultFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtFaultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:text="@string/errorMessage"
        android:textColor="#760505"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/icon_error"
        app:layout_constraintBottom_toBottomOf="@id/txtFaultTitle"
        app:layout_constraintEnd_toStartOf="@id/txtFaultTitle"
        app:layout_constraintTop_toTopOf="@id/txtFaultTitle"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/txtFaultMessage"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:background="@color/gin_grey"
        app:layout_constraintTop_toBottomOf="@id/txtFaultTitle"
        app:layout_constraintStart_toStartOf="@id/imageViewError"
        app:layout_constraintEnd_toEndOf="@id/txtFaultTitle"
        tools:ignore="RtlHardcoded" />


</androidx.constraintlayout.widget.ConstraintLayout>