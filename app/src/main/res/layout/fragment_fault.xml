<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="512dp"
    android:layout_height="652dp"
    tools:context=".pages.FaultFragment">

    <TextView
        android:id="@+id/txtFaultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawablePadding="20dp"
        android:text="@string/errorMessage"
        android:textColor="#760505"
        android:textSize="28sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/fault"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFaultMessage"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:background="@color/gin_grey"
        app:layout_constraintTop_toBottomOf="@id/txtFaultTitle"
        app:layout_constraintStart_toStartOf="@id/txtFaultTitle"
        app:layout_constraintEnd_toEndOf="@id/txtFaultTitle"
        tools:ignore="RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>