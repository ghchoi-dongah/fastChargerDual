<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="600dp"
    tools:context=".pages.ProductTestTotalLoadFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text=" LOAD TEST"
        android:background="@drawable/shape_text_title"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCH1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text=" 채널1"
        app:backgroundTint="@null"
        android:textSize="24sp"
        android:background="@drawable/selector_option_btn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintLeft_toLeftOf="@id/txtTitle" />

    <Button
        android:id="@+id/btnCH2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text=" 채널2"
        app:backgroundTint="@null"
        android:textSize="24sp"
        android:background="@drawable/selector_option_btn"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/btnCH1"
        app:layout_constraintLeft_toRightOf="@id/btnCH1" />

    <Button
        android:id="@+id/btnTotalStart"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text=" Start"
        app:backgroundTint="@null"
        android:textSize="24sp"
        android:background="@drawable/selector_confirm_btn"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/btnCH1"
        app:layout_constraintTop_toBottomOf="@id/btnCH1" />

    <Button
        android:id="@+id/btnTotalStop"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text=" Stop"
        app:backgroundTint="@null"
        android:textSize="24sp"
        android:background="@drawable/selector_stop_btn"
        android:layout_marginStart="15dp"
        android:enabled="false"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/btnCH1"
        app:layout_constraintTop_toTopOf="@id/btnTotalStart" />

    <TextView
        android:id="@+id/txtOutV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출력전압 (V)"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtDrA1"
        app:layout_constraintLeft_toLeftOf="@id/txtDrA1" />

    <EditText
        android:id="@+id/editOutV1"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:inputType="numberDecimal"
        android:gravity="right"
        android:textColor="#000000"
        android:background="@drawable/shape_edit_text_focus"
        app:layout_constraintLeft_toRightOf="@id/txtOutV1"
        app:layout_constraintBottom_toBottomOf="@id/txtOutV1" />

    <TextView
        android:id="@+id/txtOutA1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출력전류 (A)"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtOutV1"
        app:layout_constraintLeft_toLeftOf="@id/txtOutV1" />

    <EditText
        android:id="@+id/editOutA1"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:inputType="numberDecimal"
        android:gravity="right"
        android:textColor="#000000"
        android:background="@drawable/shape_edit_text_focus"
        app:layout_constraintLeft_toRightOf="@id/txtOutA1"
        app:layout_constraintBottom_toBottomOf="@id/txtOutA1" />

    <ToggleButton
        android:id="@+id/btnMainMC1"
        android:layout_width="165dp"
        android:layout_height="80dp"
        android:textOff="Main MC off"
        android:textOn="Main MC on"
        android:textSize="24sp"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="@id/editDrV1"
        app:layout_constraintLeft_toRightOf="@id/editDrV1" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text=" Reset"
        app:backgroundTint="@null"
        android:textSize="24sp"
        android:background="@drawable/selector_stop_btn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/btnMainMC1"
        app:layout_constraintTop_toBottomOf="@id/btnMainMC1" />

    <TextView
        android:id="@+id/txtDrV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전압지령 (V)"
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintLeft_toRightOf="@id/btnTotalStop" />

    <EditText
        android:id="@+id/editDrV1"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:inputType="numberDecimal"
        android:text="0"
        android:gravity="right"
        android:textColor="#000000"
        android:background="@drawable/shape_edit_text_focus"
        app:layout_constraintLeft_toRightOf="@id/txtDrV1"
        app:layout_constraintBottom_toBottomOf="@id/txtDrV1" />

    <TextView
        android:id="@+id/txtDrA1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전류지령 (A)"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtDrV1"
        app:layout_constraintLeft_toLeftOf="@id/txtDrV1" />

    <EditText
        android:id="@+id/editDrA1"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:inputType="numberDecimal"
        android:text="0"
        android:gravity="right"
        android:textColor="#000000"
        android:background="@drawable/shape_edit_text_focus"
        app:layout_constraintLeft_toRightOf="@id/txtDrA1"
        app:layout_constraintBottom_toBottomOf="@id/txtDrA1" />

    <Button
        android:id="@+id/btnKeyBoard"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="키보드 숨기기"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/btnMainMC1"
        app:layout_constraintTop_toTopOf="@id/btnMainMC1" />


</androidx.constraintlayout.widget.ConstraintLayout>