<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:orientation="horizontal"
    android:background="@color/background"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="1024dp"
        android:layout_height="72dp"
        android:tag="LeftTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <FrameLayout
        android:id="@+id/ch0"
        android:layout_width="512dp"
        android:layout_height="696dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/ch1"
        android:layout_width="512dp"
        android:layout_height="696dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintTop_toTopOf="@id/ch0"
        app:layout_constraintEnd_toEndOf="parent" >

        <FrameLayout
            android:id="@+id/fullScreen"
            android:layout_width="1024dp"
            android:layout_height="696dp"
            android:layout_marginTop="72dp"
            android:background="@color/background"
            android:visibility="invisible" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imgNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nonetwork"
        android:layout_marginStart="20dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textViewChargerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imgNetwork"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/textViewCallCenterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1800-3188"
        android:textSize="16sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textViewCallCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" | 고객센터: "
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/textViewCallCenterValue"
        app:layout_constraintBottom_toBottomOf="parent" />



    <TextView
        android:id="@+id/txtFwVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0.0"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/textViewCallCenter"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/textViewFirmware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" | FW VER: "
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/txtFwVersion"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" DEVW 1.0.0"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/textViewFirmware"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/textViewSoftware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" | VER: "
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/txtVersion"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:08 AM"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/textViewSoftware"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>