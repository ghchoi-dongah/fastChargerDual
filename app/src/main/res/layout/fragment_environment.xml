<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1024dp"
    android:layout_height="696dp"
    android:orientation="horizontal"
    tools:context=".pages.EnvironmentFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/btnConfig"
        android:layout_width="420dp"
        android:layout_height="140dp"
        android:text="@string/configButton"
        app:backgroundTint="@null"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWebSocket"
        android:layout_width="420dp"
        android:layout_height="140dp"
        android:text="@string/webSocketButton"
        app:backgroundTint="@null"
        android:layout_marginEnd="20dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintLeft_toRightOf="@id/btnConfig"
        app:layout_constraintTop_toTopOf="@id/btnConfig"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnControl"
        android:layout_width="420dp"
        android:layout_height="140dp"
        android:text="@string/controlButton"
        app:backgroundTint="@null"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintLeft_toLeftOf="@id/btnConfig"
        app:layout_constraintTop_toBottomOf="@id/btnConfig"
        app:layout_constraintBottom_toTopOf="@id/btnUi"/>


    <Button
        android:id="@+id/btnMember"
        android:layout_width="420dp"
        android:layout_height="140dp"
        android:text="@string/userInfoButton"
        app:backgroundTint="@null"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintLeft_toLeftOf="@id/btnWebSocket"
        app:layout_constraintTop_toTopOf="@id/btnControl" />

    <Button
        android:id="@+id/btnUi"
        android:layout_width="420dp"
        android:layout_height="140dp"
        android:text="@string/uiButton"
        app:backgroundTint="@null"
        android:layout_marginBottom="100dp"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintLeft_toLeftOf="@id/btnControl"
        app:layout_constraintBottom_toBottomOf="parent" />



    <Button
        android:id="@+id/btnExit"
        android:layout_width="420dp"
        android:layout_height="140dp"
        android:text="@string/exitButton"
        app:backgroundTint="@null"
        android:textStyle="bold"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintLeft_toLeftOf="@id/btnMember"
        app:layout_constraintTop_toTopOf="@id/btnUi" />

</androidx.constraintlayout.widget.ConstraintLayout>