<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#00719b" />
            <gradient android:angle="-90" android:startColor="#F0B3A8" android:endColor="#F0B3A8" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="#F0B3A8" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#F0B3A8" />
            <solid android:color="#2de6d6" />
            <gradient android:angle="-90" android:startColor="#F0B3A8" android:endColor="#F0B3A8" />
        </shape>
    </item>
</selector>